{
  "name": "tsup-plugins",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "tsup plugins",
  "type": "module",
  "keywords": [
    "tsup",
    "plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/tsup-plugins.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "scripts": {
    "build": "turbo build --filter=\"./packages/*\"",
    "lint": "eslint . --fix --cache",
    "prepare": "simple-git-hooks",
    "commitlint": "commitlint -e",
    "up": "taze -I -w",
    "changeset": "changeset",
    "version": "changeset version && changeset tag"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@minko-fe/commitlint-config": "^2.1.2",
    "@minko-fe/eslint-config": "^4.0.2",
    "@minko-fe/tsconfig": "^2.1.1",
    "bumpp": "^9.5.2",
    "eslint": "^9.10.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.9",
    "tsup": "^8.3.0",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2"
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "patchedDependencies": {
      "tsc-alias@1.8.10": "patches/tsc-alias@1.8.10.patch"
    }
  }
}
